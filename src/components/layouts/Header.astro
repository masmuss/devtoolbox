---
import { Code } from "lucide-react";
import { siteConfig } from "@/lib/data/constants";
---

<header class="sticky top-0 z-50 border-b bg-white/80 backdrop-blur-sm dark:bg-neutral-900/80">
	<div class="container mx-auto flex items-center justify-between px-4 py-4">
		<a href="/" class="flex items-center gap-2">
			<div class="flex h-8 w-8 items-center justify-center rounded-lg bg-black dark:bg-white">
				<Code className="h-5 w-5 text-white dark:text-black" />
			</div>
			<span class="text-xl font-bold text-neutral-900 dark:text-neutral-100">{siteConfig.name}</span
			>
		</a>
	</div>
</header>
