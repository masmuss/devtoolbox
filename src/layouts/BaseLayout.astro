---
import Header from "@/components/layouts/Header.astro";

interface Props {
	title: string;
	description?: string;
}

import "@/styles/global.css";
import Footer from "@/components/layouts/Footer.astro";
import ThemeProvider from "@/components/layouts/ThemeProvider.astro";

const { title, description = "Collection of useful developer tools" } = Astro.props;

const pageTitle = title ? `${title} - DevToolbox` : "DevToolbox";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{pageTitle}</title>
		<meta name="description" content={description} />
		<link rel="icon" type="image/x-icon" href="/favicon.svg" />
	</head>
	<body
		class="min-h-screen bg-gradient-to-br from-neutral-100 to-neutral-50 dark:from-neutral-900 dark:to-neutral-800/50"
	>
		<ThemeProvider />
		<Header />

		<main class="mx-auto min-h-screen">
			<slot />
		</main>

		<Footer />
	</body>
</html>
