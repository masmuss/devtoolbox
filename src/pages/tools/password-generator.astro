---
import PasswordGeneratorComponent from "@/components/tools/PasswordGenerator";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
	title="Password Generator - DevTools"
	description="Generate secure passwords with customizable length and character options"
>
	<main class="mx-auto max-w-5xl px-6 py-12 lg:px-8">
		<div class="mb-8 text-center">
			<h1 class="mb-4 text-4xl font-bold text-black dark:text-white">Password Generator</h1>
			<p class="mx-auto max-w-2xl text-xl text-neutral-600 dark:text-neutral-400">
				Generate secure, random passwords with customizable options for maximum security.
			</p>
		</div>

		<PasswordGeneratorComponent client:load />

		<Card className="mt-8 border-neutral-200 dark:border-neutral-800">
			<CardHeader>
				<CardTitle>Password Security Tips</CardTitle>
			</CardHeader>
			<CardContent>
				<ul class="space-y-2 text-neutral-600 dark:text-neutral-400">
					<li>• Use at least 12 characters for better security</li>
					<li>• Include a mix of uppercase, lowercase, numbers, and symbols</li>
					<li>• Avoid using personal information or common words</li>
					<li>• Use a unique password for each account</li>
					<li>• Consider using a password manager to store your passwords securely</li>
				</ul>
			</CardContent>
		</Card>
	</main>
</BaseLayout>
