---
import PasswordGeneratorComponent from "@/components/tools/password-generator";
import BaseLayout from "@/layouts/BaseLayout.astro";
import PageHeader from "@/components/layouts/PageHeader.astro";
import { PasswordTips } from "@/components/partials/password/password-tips";
---

<BaseLayout
	title="Password Generator"
	description="Generate secure passwords with customizable length and character options"
>
	<main class="mx-auto max-w-5xl px-6 py-12 lg:px-8">
		<PageHeader
			title="Password Generator"
			description="Generate secure, random passwords with customizable options for maximum security."
		/>

		<PasswordGeneratorComponent client:load />

		<div class="mt-8">
			<PasswordTips />
		</div>
	</main>
</BaseLayout>
