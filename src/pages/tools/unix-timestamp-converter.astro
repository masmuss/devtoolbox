---
import PageHeader from "@/components/layouts/PageHeader.astro";
import UnixTimestampConverterComponent from "@/components/tools/unix-timestamp-converter";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
	title="Unix Timestamp Converter"
	description="Convert between Unix timestamps and human-readable date formats"
>
	<main class="space-8 mx-auto max-w-7xl px-6 py-12 lg:px-8">
		<PageHeader
			title="Unix Timestamp Converter"
			description="Convert between Unix timestamps and human-readable date formats"
		/>

		<UnixTimestampConverterComponent client:load />
	</main>
</BaseLayout>
