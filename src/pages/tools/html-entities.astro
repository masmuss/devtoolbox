---
import PageHeader from "@/components/layouts/PageHeader.astro";
import { Base64Info } from "@/components/partials/base64/base64-info";
import HtmlEntityEncoderComponent from "@/components/tools/html-entity-encoder";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
	title="HTML Entity Encoder"
	description="Encode and decode HTML entities for safe web content display"
>
	<main class="space-8 mx-auto max-w-5xl px-6 py-12 lg:px-8">
		<PageHeader
			title="HTML Entity Encoder"
			description="Encode and decode HTML entities for safe web content display"
		/>

		<HtmlEntityEncoderComponent client:load />
	</main>
</BaseLayout>
