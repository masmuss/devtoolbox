{
	"name": "astro-toolbox",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint:check": "bunx biome check --staged",
		"lint:fix": "bunx biome lint --write",
		"lint": "biome lint .",
		"format": "bun run format:code && bun run format:imports",
		"format:code": "biome format . --write && prettier . --write --ignore-unknown --cache",
		"format:imports": "biome check --formatter-enabled=false --write",
		"check": "astro check",
		"release": "commit-and-tag-version"
	},
	"dependencies": {
		"@astrojs/preact": "^4.1.0",
		"@radix-ui/react-slot": "^1.2.3",
		"@tailwindcss/vite": "^4.1.11",
		"astro": "^5.12.9",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-preact": "^0.539.0",
		"lucide-react": "^0.539.0",
		"preact": "^10.27.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"commit-and-tag-version": "^12.5.2",
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"tw-animate-css": "^1.3.6"
	}
}
